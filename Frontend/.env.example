# KlubN Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# ─── Backend API ───
VITE_API_URL=http://localhost:5000/graphql
VITE_WS_URL=ws://localhost:5000/graphql
VITE_UPLOAD_API_URL=http://localhost:5000/api/FileUpload/image

# Production:
# VITE_API_URL=https://api.yourdomain.com/graphql
# VITE_WS_URL=wss://api.yourdomain.com/graphql
# VITE_UPLOAD_API_URL=https://api.yourdomain.com/api/FileUpload/image

# ─── Stripe (required for ticket purchases) ───
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx

# ─── App ───
VITE_APP_NAME=KlubN
VITE_APP_VERSION=1.0.0

# ─── Feature Flags ───
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
