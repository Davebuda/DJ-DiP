{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "System": "Error"
    }
  },
  "AllowedHosts": "yourdomain.com,www.yourdomain.com,api.yourdomain.com",
  "ConnectionStrings": {
    "DefaultConnection": "${ConnectionStrings__DefaultConnection}",
    "SqlServerConnection": "${ConnectionStrings__SqlServerConnection}"
  },
  "Jwt": {
    "Key": "${Jwt__Key}",
    "Issuer": "DJDiP",
    "Audience": "DJDiP",
    "AccessTokenMinutes": 60,
    "RefreshTokenDays": 30
  },
  "AppSettings": {
    "BaseUrl": "${AppSettings__BaseUrl}",
    "FrontendUrl": "${AppSettings__FrontendUrl}",
    "EnableSwagger": false,
    "EnableDetailedErrors": false
  },
  "FileUpload": {
    "MaxFileSizeBytes": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".mp4", ".mov"],
    "UploadPath": "wwwroot/uploads"
  },
  "RateLimit": {
    "PermitLimit": 100,
    "Window": 1,
    "QueueLimit": 0
  },
  "Cors": {
    "AllowedOrigins": "${CORS__AllowedOrigins}"
  }
}
